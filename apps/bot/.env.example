## See README for detailed instructions of where to find each

DISCORD_TOKEN=         # Bot token from step 1.3 in README
DISCORD_APP_ID=        # Application ID from step 1.4 in README
GUILD_ID=              # Right-click server → Copy Server ID (needs Developer Mode*)
MOD_WARN_CHANNEL_ID=   # Channel for warning notifications - Right-click mod channel → Copy Channel ID
MOD_COMMS_CHANNEL_ID=  # Channel for bot to notify mods of actions needed (e.g. creating polls) - Right-click channel → Copy Channel ID
GOVERNANCE_CHANNEL_ID= # Right-click governance channel → Copy Channel ID
GENERAL_CHANNEL_ID=    # Right-click general channel → Copy Channel ID (for vote result announcements)
NOMINATIONS_CHANNEL_CATEGORY_ID= # (Optional) Channel category where discussion/vote channels will be created - Right-click category → Copy Channel ID
KICK_QUORUM_PERCENT=40 # % of members for kick alert
VOTE_QUORUM_PERCENT=40 # % of members required for voting quorum
GUILD_SALT=            # Run: openssl rand -base64 32
DATABASE_URL=          # Local: postgres://gary:pass@localhost:5432/gary
                       # Railway: ${{Postgres.DATABASE_URL}}

# Optional: Logging
LOG_LEVEL=info         # Logging level: error, warn, info, debug

# Nomination Settings (in minutes)
NOMINATE_DISCUSSION_PERIOD_MINUTES=2880  # Default: 48 hours (2880 minutes)
NOMINATE_VOTE_PERIOD_MINUTES=7200        # Default: 120 hours / 5 days (7200 minutes)
NOMINATE_CERTIFY_PERIOD_MINUTES=1440     # Default: 24 hours (1440 minutes) - waiting period after vote before final state
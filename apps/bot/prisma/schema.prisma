generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vote {
  id           String   @id @default(cuid())
  guildId      String
  targetUserId String
  voterHash    String
  createdAt    DateTime @default(now())

  @@unique([guildId, targetUserId, voterHash])
  @@index([guildId, targetUserId])
}
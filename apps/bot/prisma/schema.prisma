generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Warn {
  id           String   @id @default(cuid())
  guildId      String
  targetUserId String
  voterHash    String
  message      String?
  createdAt    DateTime @default(now())

  @@unique([guildId, targetUserId, voterHash])
  @@index([guildId, targetUserId])
}

model Nominee {
  id                  String       @id @default(cuid())
  name                String
  state               NomineeState
  nominator           String
  guildId             String
  discussionStart     DateTime?
  voteStart           DateTime?
  certifyStart        DateTime?
  createdAt           DateTime     @default(now())
  discussionChannelId String?
  voteChannelId       String?
  votePollMessageId   String?
  voteGovernanceAnnounced Boolean  @default(false)
  voteYesCount        Int          @default(0)
  voteNoCount         Int          @default(0)
  votePassed          Boolean?

  @@unique([guildId, name])
  @@index([guildId, state])
  @@index([guildId, discussionStart])
  @@index([guildId, voteStart])
  @@index([guildId, certifyStart])
}

enum NomineeState {
  ACTIVE
  DISCUSSION
  VOTE
  CERTIFY
  PAST
}

